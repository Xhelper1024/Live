<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thinkgem.jeesite.modules.live.dao.ALiveTypesDao">
    
	<sql id="aLiveTypesColumns">
		a.id AS "id",
		a.name AS "name",
		a.create_date AS "createDate"
	</sql>
	
	<sql id="aLiveTypesJoins">
	</sql>
    
	<select id="get" resultType="ALiveTypes">
		SELECT 
			<include refid="aLiveTypesColumns"/>
		FROM a_live_types a
		<include refid="aLiveTypesJoins"/>
		WHERE a.id = #{id}
	</select>
	
	<select id="findList" resultType="ALiveTypes">
		SELECT 
			<include refid="aLiveTypesColumns"/>
		FROM a_live_types a
		<include refid="aLiveTypesJoins"/>
		<where>
			
			<if test="id != null and id != ''">
				AND a.id = #{id}
			</if>
			<if test="name != null and name != ''">
				AND a.name LIKE 
					<if test="dbName == 'oracle'">'%'||#{name}||'%'</if>
					<if test="dbName == 'mssql'">'%'+#{name}+'%'</if>
					<if test="dbName == 'mysql'">concat('%',#{name},'%')</if>
			</if>
			<if test="createDate != null and createDate != ''">
				AND a.create_date = #{createDate}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
			</otherwise>
		</choose>
	</select>
	
	<select id="findAllList" resultType="ALiveTypes">
		SELECT 
			<include refid="aLiveTypesColumns"/>
		FROM a_live_types a
		<include refid="aLiveTypesJoins"/>
		<where>
			
		</where>		
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
			</otherwise>
		</choose>
	</select>
	
	<insert id="insert">
		INSERT INTO a_live_types(
			name,
			create_date
		) VALUES (
			#{name},
			#{createDate}
		)
	</insert>
	
	<update id="update">
		UPDATE a_live_types SET 	
			name = #{name}
		WHERE id = #{id}
	</update>
	
	<update id="delete">
		DELETE FROM a_live_types
		WHERE id = #{id}
	</update>
	
</mapper>